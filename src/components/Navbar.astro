---
import clsx from "clsx";

export interface Props {
  currentPage?: string;
}
const { currentPage } = Astro.props;
---

<div
  class="pointer-events-none fixed top-6 z-30 grid w-full grid-cols-[1fr,min(640px,100%),1fr] px-4"
>
  <div
    class="pointer-events-auto col-start-2 -mx-px rounded-2xl bg-gray-800/95 px-4 py-2.5 shadow-surface-glass backdrop-blur will-change-transform [@supports(backdrop-filter:blur(0px))]:bg-zinc-900 opacity-100 scale-100"
  >
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-6">
        <a
          href="/"
          class="rounded-full focus:outline-none focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-rose-500/70"
        >
          <div
            class="rounded-full bg-gradient-to-tl from-purple-700/60 to-rose-400/60 shadow-lg p-[2px] group transform transition ease-out hover:scale-105 hover:from-purple-700 hover:to-rose-400 hover:shadow-rose-500/25 active:translate-y-px"
          >
            <div
              class="rounded-full p-px h-[36px] w-[36px] transition duration-300 group-hover:scale-105"
            >
              <img
                src="https://github.com/d6stiny.png"
                alt="github profile image"
                class="rounded-full"
              />
            </div>
          </div>
        </a>
      </div>

      <div
        class="flex items-center space-x-7 text-base font-semibold leading-none text-rose-100/90"
      >
        <div>
          <a
            class="group focus:outline-none focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-rose-500/70"
            href="/work"
            ><div class="sm:flex sm:items-center sm:space-x-2">
              <div class="mb-1.5 flex justify-center sm:mb-0 sm:block">
                <div
                  class={clsx(
                    "rounded-lg bg-gradient-to-tl from-purple-500/80 to-rose-400/80 p-1 shadow-lg transition-all duration-300 ease-out group-hover:scale-[1.2] group-hover:rounded-[10px] group-hover:shadow-purple-500/40 group-active:translate-y-1",
                    {
                      "ring-[2px] ring-purple-500/30 ring-offset-1 ring-offset-black/5":
                        currentPage === "work",
                    }
                  )}
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    ><rect width="20" height="14" x="2" y="7" rx="2" ry="2"
                    ></rect><path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"
                    ></path></svg
                  >
                </div>
              </div><div>Work</div>
            </div></a
          >
        </div>
      </div>
    </div>
  </div>
</div>
