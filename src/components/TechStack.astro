---
import pkg, {
  SiAstro,
  SiDebian,
  SiDocker,
  SiSvelte,
  SiVim,
} from "react-icons/si/index.js";
const {
  SiJavascript,
  SiNodedotjs,
  SiTypescript,
  SiFastify,
  SiNextdotjs,
  SiReact,
  SiTailwindcss,
  SiVisualstudiocode,
  SiGit,
  SiGithub,
  SiGithubactions,
  SiPrisma,
  SiPlanetscale,
  SiVercel,
  SiCloudflare,
  SiMacos,
  SiGnubash,
} = pkg;
const techstack = {
  backend: [
    {
      name: "JavaScript",
      url: "https://developer.mozilla.org/en-US/docs/Web/JavaScript",
      icon: SiJavascript,
    },
    {
      name: "Node.js",
      url: "https://nodejs.dev",
      icon: SiNodedotjs,
    },
    {
      name: "TypeScript",
      url: "https://www.typescriptlang.org",
      icon: SiTypescript,
    },
    {
      name: "Fastify",
      url: "https://fastify.io",
      icon: SiFastify,
    },
    {
      name: "Next.js",
      url: "https://nextjs.org",
      icon: SiNextdotjs,
    },
  ],
  frontend: [
    {
      name: "React",
      url: "https://reactjs.org",
      icon: SiReact,
    },
    {
      name: "Next.js",
      url: "https://nextjs.org",
      icon: SiNextdotjs,
    },
    {
      name: "Astro",
      url: "https://astro.build",
      icon: SiAstro,
    },
    {
      name: "Svelte",
      url: "https://svelte.dev",
      icon: SiSvelte,
    },
    {
      name: "Tailwind CSS",
      url: "https://tailwindcss.com",
      icon: SiTailwindcss,
    },
  ],
  databases: [
    {
      name: "Prisma",
      url: "https://www.prisma.io",
      icon: SiPrisma,
    },
    {
      name: "PlanetScale",
      url: "https://planetscale.com",
      icon: SiPlanetscale,
    },
  ],
  linux: [
    {
      name: "Bash",
      url: "https://www.gnu.org/software/bash",
      icon: SiGnubash,
    },
    {
      name: "Git",
      url: "https://git-scm.com",
      icon: SiGit,
    },
    {
      name: "Docker",
      url: "https://www.docker.com",
      icon: SiDocker,
    },
    {
      name: "Debian",
      url: "https://www.debian.org",
      icon: SiDebian,
    },
    {
      name: "Vim",
      url: "https://www.vim.org",
      icon: SiVim,
    },
  ],
  cloud: [
    {
      name: "Vercel",
      url: "https://vercel.com",
      icon: SiVercel,
    },
    {
      name: "Cloudflare",
      url: "https://www.cloudflare.com",
      icon: SiCloudflare,
    },
  ],
  others: [
    {
      name: "macOS",
      url: "https://www.apple.com/macos",
      icon: SiMacos,
    },
    {
      name: "Visual Studio Code",
      url: "https://code.visualstudio.com",
      icon: SiVisualstudiocode,
    },
    {
      name: "GitHub",
      url: "https://github.com",
      icon: SiGithub,
    },
    {
      name: "GitHub Actions",
      url: "https://github.com/features/actions",
      icon: SiGithubactions,
    },
  ],
};
---

<div class="space-y-10 mt-20 sm:mt-32 mb-20">
  <section id="techstack">
    <h2 class="text-2xl font-medium text-rose-100/80 sm:text-3xl mb-2">
      Tech Stack
    </h2>
    <div class="ml-2 gap-7 mt-4">
      {
        Object.entries(techstack).map(([name, items]) => (
          <>
            <section class="flex flex-row gap-2">
              <h3 class="text-xl font-medium text-rose-100/80 mb-2">
                {name.charAt(0).toUpperCase() + name.slice(1).replace("_", "/")}
              </h3>
              <div class="flex flex-wrap gap-2">
                {items.map(({ name, url, icon: Icon }) => (
                  <a
                    href={url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex items-center gap-1"
                  >
                    <Icon size={24} />
                  </a>
                ))}
              </div>
            </section>
          </>
        ))
      }
    </div>
  </section>
</div>
