---
export interface Props {
	date?: string;
	title: string;
	image?: string;
	whatisitabout?: string;
	description?: string;
	whatido?: string;
	whatidid?: string;
	link?: string;
	role?: string;
	techstack?: string[];
}

const {
	date,
	title,
	image,
	whatisitabout,
	description,
	whatido,
	whatidid,
	link,
	role,
	techstack,
} = Astro.props;
---

<a
	href={link}
	class="block overflow-hidden rounded-2xl bg-white/5 p-7 shadow-surface-elevation-low transition duration-300 hover:bg-white/10 hover:shadow-surface-elevation-medium mb-4 focus:outline-none focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-rose-500/70"
>
	<div class="flex flex-row items-center">
		{
			image && (
				<img
					src={image}
					alt={title}
					class="w-[70px] h-[70px] rounded-lg mr-4"
				/>
			)
		}
		<div>
			{date && <sub class="uppercase text-rose-400 tracking-wide">{date}</sub>}
			<h3 class="font-bold text-3xl">{title}</h3>
			{whatisitabout && <span class="text-gray-400">{whatisitabout}</span>}
		</div>
	</div>
	<div class="mt-2 border-b border-white/5"></div>
	<div class="pt-4 box-border">
		{
			role && (
				<>
					<h3 class="font-bold text-xl">Role</h3>
					<p class="text-gray-300">{role}</p>
				</>
			)
		}
		{
			description && (
				<>
					<h3 class="font-bold text-xl">Description</h3>
					<p class="text-gray-300">{description}</p>
				</>
			)
		}
		{
			whatido && (
				<>
					<h3 class="font-bold text-xl">What I do</h3>
					<p class="text-gray-300">{whatido}</p>
				</>
			)
		}
		{
			whatidid && (
				<>
					<h3 class="font-bold text-xl">What I did</h3>
					<p class="text-gray-300">{whatidid}</p>
				</>
			)
		}
		{
			techstack && (
				<>
					<h3 class="font-bold text-xl">Tech Stack</h3>
					<p class="text-gray-300">{techstack.join(", ")}</p>
				</>
			)
		}
	</div>
</a>
